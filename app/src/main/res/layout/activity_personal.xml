<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.fr2eman.accountingoffenses.PersonalActivity"
    android:background="@color/backgroundColor"
    android:orientation="vertical">

    <include android:id="@+id/title_actionbar" layout="@layout/title_menu_layout"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <ScrollView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="70dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Личный кабинет"
                    android:id="@+id/titleTextView"
                    android:gravity="center"
                    android:textSize="@dimen/title_text_size"
                    android:textStyle="bold|italic"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Фамилия: "
                    android:textSize="@dimen/private_office_size_text"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/personal_second_name_title"
                    android:layout_below="@id/titleTextView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/private_office_size_text"
                    android:id="@+id/personal_second_name_view"
                    android:layout_below="@id/titleTextView"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/personal_second_name_title"
                    android:layout_alignTop="@id/personal_second_name_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Имя: "
                    android:textSize="@dimen/private_office_size_text"
                    android:layout_marginTop="10dp"
                    android:id="@+id/personal_first_name_title"
                    android:layout_alignRight="@id/personal_second_name_title"
                    android:layout_below="@id/personal_second_name_view" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/private_office_size_text"
                    android:id="@+id/personal_first_name_view"
                    android:layout_below="@id/personal_second_name_view"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/personal_first_name_title"
                    android:layout_alignTop="@id/personal_first_name_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Отчество: "
                    android:textSize="@dimen/private_office_size_text"
                    android:layout_marginTop="10dp"
                    android:id="@+id/personal_middle_name_title"
                    android:layout_alignRight="@id/personal_first_name_title"
                    android:layout_below="@id/personal_first_name_view" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/private_office_size_text"
                    android:id="@+id/personal_middle_name_view"
                    android:layout_below="@id/personal_second_name_view"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/personal_middle_name_title"
                    android:layout_alignTop="@id/personal_middle_name_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Должность: "
                    android:textSize="@dimen/private_office_size_text"
                    android:layout_marginTop="10dp"
                    android:id="@+id/personal_position_title"
                    android:layout_alignRight="@id/personal_middle_name_title"
                    android:layout_below="@id/personal_middle_name_view" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/private_office_size_text"
                    android:id="@+id/personal_position_view"
                    android:layout_below="@id/personal_middle_name_view"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/personal_position_title"
                    android:layout_alignTop="@id/personal_position_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Звание: "
                    android:textSize="@dimen/private_office_size_text"
                    android:layout_marginTop="10dp"
                    android:id="@+id/personal_rank_title"
                    android:layout_alignRight="@id/personal_position_title"
                    android:layout_below="@id/personal_position_view" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/private_office_size_text"
                    android:id="@+id/personal_rank_view"
                    android:layout_below="@id/personal_middle_name_view"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/personal_rank_title"
                    android:layout_alignTop="@id/personal_rank_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Место работы:"
                    android:textSize="@dimen/private_office_size_text"
                    android:layout_marginTop="10dp"
                    android:gravity="right"
                    android:textAlignment="gravity"
                    android:id="@+id/personal_work_title"
                    android:layout_alignRight="@id/personal_rank_title"
                    android:layout_below="@id/personal_rank_view" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/private_office_size_text"
                    android:id="@+id/personal_work_view"
                    android:layout_below="@id/personal_middle_name_view"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/personal_work_title"
                    android:layout_alignTop="@id/personal_work_title" />
            </RelativeLayout>
        </ScrollView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выход из аккаунта"
            android:textSize="23dp"
            android:id="@+id/personal_logout_button"
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            style="@style/BaseButton"/>

    </RelativeLayout>

</LinearLayout>
